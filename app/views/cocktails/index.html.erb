<%= render "shared/navbar" %>
<%= link_to "Join the Gin Family", new_cocktail_path, :class => "btn btn-primary m-3" %>
<div class="container">
  <div class="row justify-content-around">
    <% @cocktails.each do |cocktail| %>
    <div class="card">
      <%= image_tag "cocktail", :height=>200%>
      <div class="card-body">
        <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail)%></h5>
      </div>
    </div>
   <% end %>
  </div>
</div>




